[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[push]
	default = simple

[core]
	editor = nvim
	excludesfile = ~/.gitignore_global

[alias]
  co = checkout
  cb = checkout -b
  ll =    log --date=short --pretty=format:'%C(bold blue)%h%C(reset) %C(bold green)%ad%C(reset) - %C(white)%s%C(reset) %C(dim white)- %an%C(reset) %C(bold yellow)%d%C(reset)'
  graph = log --date=short --pretty=format:'%C(bold blue)%h%C(reset) %C(bold green)%ad%C(reset) - %C(white)%s%C(reset) %C(dim white)- %an%C(reset) %C(bold yellow)%d%C(reset)' --all --graph
  prune = remote prune origin
[user]
	name = Anton Vietrov
	email = avietrov@users.noreply.github.com
[fetch]
	prune = true
[init]
	defaultBranch = master
