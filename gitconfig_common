[init]
  defaultBranch = master

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = blocks

[push]
  default = simple

[fetch]
  prune = true

[alias]
  co = checkout
  cb = checkout -b
  ll =    log --date=short --pretty=format:'%C(bold blue)%h%C(reset) %C(bold green)%ad%C(reset) - %C(white)%s%C(reset) %C(dim white)- %an%C(reset) %C(bold yellow)%d%C(reset)'
  graph = log --date=short --pretty=format:'%C(bold blue)%h%C(reset) %C(bold green)%ad%C(reset) - %C(white)%s%C(reset) %C(dim white)- %an%C(reset) %C(bold yellow)%d%C(reset)' --all --graph
  prune = remote prune origin

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold # line info
  old = red # deletions
  new = green # additions

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

